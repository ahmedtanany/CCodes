#include<stdio.h>
#include <stdlib.h>

int main()
{
	setvbuf(stdout,NULL,_IONBF,0);
	setvbuf(stderr,NULL,_IONBF,0);
	int num1;
	int sum = 0;
	printf("Enter the number: ");
	scanf("%d",&num1);
	for (int i = 1;i<num1;i++)
	{
		sum +=i;
	}
	printf("sum of the first %d integers equals: %d",num1,sum);
	return 0;
}
